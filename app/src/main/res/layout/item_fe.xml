<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/table_black"
    android:orientation="horizontal">



    <View
        android:id="@+id/item_fe_left_line"
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/table_text_header"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_fe_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:paddingTop="4dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/table_text_header"
            android:text="F.E 1"/>

    </LinearLayout>


    <View
        android:id="@+id/item_fe_right_line"
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/table_text_header"/>

</LinearLayout>