<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"

    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        tools:context=".activities.LoginActivity">



        <TextView
            android:id="@+id/activity_ipr_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ipr_title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/primary_color"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="48dp"/>


        <LinearLayout
            android:id="@+id/activity_ipr_fields_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_ipr_header"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/add_task_label"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/skin_effect_existing"/>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/activity_ipr_skin_switch_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:thumb="@drawable/switch_button_thumb"
                    app:track="@drawable/switch_button_track" />


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/darker_gray"
                android:alpha="0.5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">


                <TextView
                    style="@style/add_task_label"
                    android:text="@string/average_reservoir_pressure"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginStart="8dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        style="@style/cardView_item"
                        app:cardCornerRadius="25dp"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true"
                        app:cardBackgroundColor="@color/white">

                        <EditText
                            android:id="@+id/activity_ipr_average_reservoir_pressure_field"
                            style="@style/login_edit_text"
                            android:gravity="center"
                            android:textColorHint="@android:color/darker_gray"
                            android:inputType="numberDecimal"
                            android:hint="@string/number_hint"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="72dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/primary_color"
                        android:text="@string/psig"/>

                </LinearLayout>




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">


                <TextView
                    style="@style/add_task_label"
                    android:text="@string/bubble_point_pressure"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginStart="8dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        style="@style/cardView_item"
                        app:cardCornerRadius="25dp"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true"
                        app:cardBackgroundColor="@color/white">

                        <EditText
                            android:id="@+id/activity_ipr_bubble_point_pressure"
                            style="@style/login_edit_text"
                            android:gravity="center"
                            android:textColorHint="@android:color/darker_gray"
                            android:inputType="numberDecimal"
                            android:hint="@string/number_hint"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="72dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/primary_color"
                        android:text="@string/psig"/>

                </LinearLayout>




            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="2dp"
                    android:background="@android:color/darker_gray"
                    android:alpha="0.5"/>


                <TextView
                    style="@style/add_task_label"
                    android:layout_width="wrap_content"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:textSize="18sp"
                    android:layout_marginBottom="2dp"
                    android:text="@string/test_point"/>


                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="2dp"
                    android:background="@android:color/darker_gray"
                    android:alpha="0.5"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical">


                <TextView
                    style="@style/add_task_label"
                    android:text="@string/test_point_pressure"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginStart="8dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        style="@style/cardView_item"
                        app:cardCornerRadius="25dp"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true"
                        app:cardBackgroundColor="@color/white">

                        <EditText
                            android:id="@+id/activity_ipr_test_point_pressure"
                            style="@style/login_edit_text"
                            android:gravity="center"
                            android:textColorHint="@android:color/darker_gray"
                            android:inputType="numberDecimal"
                            android:hint="@string/number_hint"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="72dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/primary_color"
                        android:text="@string/psig"/>

                </LinearLayout>




            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">


                <TextView
                    style="@style/add_task_label"
                    android:text="@string/test_point_flow_rate"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginStart="8dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        style="@style/cardView_item"
                        app:cardCornerRadius="25dp"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true"
                        app:cardBackgroundColor="@color/white">

                        <EditText
                            android:id="@+id/activity_ipr_test_point_flow_rate"
                            style="@style/login_edit_text"
                            android:gravity="center"
                            android:textColorHint="@android:color/darker_gray"
                            android:inputType="numberDecimal"
                            android:hint="@string/number_hint"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="72dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:textColor="@color/primary_color"
                        android:text="@string/stb_day"/>

                </LinearLayout>




            </LinearLayout>


            <LinearLayout
                android:id="@+id/activity_ipr_flow_efficiency_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="6dp"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/activity_ipr_fe_one_title"
                        style="@style/add_task_label"
                        android:text="@string/flow_efficiency"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginStart="8dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            style="@style/cardView_item"
                            app:cardCornerRadius="25dp"
                            app:cardPreventCornerOverlap="false"
                            app:cardUseCompatPadding="true"
                            app:cardBackgroundColor="@color/white">

                            <EditText
                                android:id="@+id/activity_ipr_fe_one_field"
                                style="@style/login_edit_text"
                                android:gravity="center"
                                android:textColorHint="@android:color/darker_gray"
                                android:inputType="numberDecimal"
                                android:hint="@string/number_hint"/>

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="72dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="@color/primary_color"
                            android:text="@string/none"/>

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:gravity="center"
                            android:orientation="horizontal">



                            <TextView
                                style="@style/add_task_label"
                                android:layout_width="wrap_content"
                                android:textSize="14sp"
                                android:textColor="#838383"
                                android:layout_marginBottom="0dp"
                                android:text="@string/do_not_have_fe"/>


                            <TextView
                                android:id="@+id/activity_ipr_calculate_fe_button"
                                style="@style/add_task_label"
                                android:layout_marginBottom="0dp"
                                android:layout_width="wrap_content"
                                android:textSize="14sp"
                                android:clickable="true"
                                android:focusable="true"
                                android:layout_marginStart="2dp"
                                android:textColor="@color/primary_color"
                                android:background="@drawable/text_button"
                                android:text="@string/generate"/>

                        </LinearLayout>


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:padding="4dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:visibility="gone"
                            tools:visibility="visible"
                            android:src="@drawable/delete_button" />


                </RelativeLayout>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="start"
                    android:orientation="horizontal">



                    <TextView
                        style="@style/add_task_label"
                        android:layout_width="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#838383"
                        android:layout_marginBottom="0dp"
                        android:text="@string/have_another_fe_value"/>


                    <TextView
                        android:id="@+id/activity_ipr_add_another_fe_value_button"
                        style="@style/add_task_label"
                        android:layout_marginBottom="0dp"
                        android:layout_width="wrap_content"
                        android:textSize="14sp"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginStart="8dp"
                        android:textColor="@color/primary_color"
                        android:background="@drawable/text_button"
                        android:text="@string/add"/>

                </LinearLayout>


            </LinearLayout>





        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/activity_ipr_fields_container"
            android:layout_marginTop="24dp">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:paddingEnd="24dp"
                android:paddingStart="0dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">



                <TextView
                    android:id="@+id/activity_ipr_back_button"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textAllCaps="true"
                    android:text="@string/back"
                    android:background="@drawable/final_secondary_button"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingStart="24dp"
                android:paddingEnd="0dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">



                <TextView
                    android:id="@+id/activity_ipr_next_button"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textAllCaps="true"
                    android:text="@string/next"
                    android:background="@drawable/final_secondary_button"/>


            </LinearLayout>


        </LinearLayout>





    </RelativeLayout>


</ScrollView>


